---
const { title, subtitle, description } = Astro.props;
---
<div class="about-item"> 
    <h1>{title}</h1>
    <h2>{subtitle}</h2>
    <p>{description}</p>
</div>

<style>
    .about-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: var(--spacing2);   
        text-align: left;
        width: 100%;
        color: var(--color90);
        padding: var(--spacing5);
        & h1 {
            width: 100%;
            font: var(--h1);
        }
        & h2 {
            width: 100%;
            font: var(--h2);
        }
        & p {
            width: 100%;
            font: var(--p);
        }
    }
</style>
