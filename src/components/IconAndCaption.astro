---
import { Icon} from 'astro-icon/components';
const { name, title } = Astro.props;
---
<div>
    <Icon name={`mdi:${name}`} />
    <p>{title}</p>
</div>

<style>
        div {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: var(--spacing2);
            color: var(--color100);
            cursor: pointer;
            & :first-child {
                width: 56px;
                height: 56px;
                box-shadow: 0px 4px 2px -2px var(--color100);
                border-radius: 10%;
                transition: all 0.3s ease;
                &:hover {
                    box-shadow: 0px 4px 2px -2px var(--accent);
                    transition: all 0.3s ease;
                }

            }
            & p {
                font: var(--p);
            }
        }
</style>
